# Enterprise Features - Local Development
# Copy this to .env.local to enable enterprise features

# Core Enterprise Features
NEXT_PUBLIC_ENTERPRISE_ENABLED=true
NEXT_PUBLIC_CUSTOM_FIELDS_ENABLED=true
NEXT_PUBLIC_WORKFLOWS_ENABLED=false
NEXT_PUBLIC_MULTI_VIEW_ENABLED=true
NEXT_PUBLIC_REAL_TIME_SYNC_ENABLED=true
NEXT_PUBLIC_TIME_TRACKING_ENABLED=true
NEXT_PUBLIC_ADVANCED_REPORTING_ENABLED=false
NEXT_PUBLIC_INTEGRATIONS_ENABLED=false

# AWS Tables for Enterprise (Development)
WORKSPACES_TABLE=PreWorkApp-Workspaces-Dev
CUSTOM_FIELDS_TABLE=PreWorkApp-CustomFields-Dev
WORKFLOWS_TABLE=PreWorkApp-Workflows-Dev
BOARD_CONFIGS_TABLE=PreWorkApp-BoardConfigs-Dev
ENTERPRISE_PROJECTS_TABLE=PreWorkApp-EnterpriseProjects-Dev
ENTERPRISE_TASKS_TABLE=PreWorkApp-EnterpriseTasks-Dev
DASHBOARDS_TABLE=PreWorkApp-Dashboards-Dev
SYNC_OPERATIONS_TABLE=PreWorkApp-SyncOperations-Dev

# Sync Configuration
SYNC_INTERVAL_SECONDS=30
OFFLINE_SYNC_ENABLED=true
CONFLICT_RESOLUTION_STRATEGY=last_write_wins

# Feature Limits
WORKSPACES_PER_USER_LIMIT=5
CUSTOM_FIELDS_PER_WORKSPACE_LIMIT=50
PROJECTS_PER_WORKSPACE_LIMIT=100
USERS_PER_WORKSPACE_LIMIT=50

# Security
ENTERPRISE_ENCRYPTION_ENABLED=true
AUDIT_LOG_ENABLED=true
SESSION_TIMEOUT_MINUTES=480
