# ðŸš€ Pre-Work App - Local Environment Configuration
# Copy this file to .env.local and update with your AWS credentials

# ==========================================
# QUICK START OPTIONS
# ==========================================

# Option 1: Enable AWS Features (requires AWS account)
NEXT_PUBLIC_ENABLE_AWS_FEATURES=true
USE_MOCK_AWS_SERVICES=false

# Option 2: Use Mock Data Only (no AWS required)
# NEXT_PUBLIC_ENABLE_AWS_FEATURES=false
# USE_MOCK_AWS_SERVICES=true

# ==========================================
# AWS CREDENTIALS (Required for Option 1)
# ==========================================

# Get these from AWS IAM Console
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# ==========================================
# AWS REGION
# ==========================================

NEXT_PUBLIC_AWS_REGION=us-east-1
AWS_REGION=us-east-1

# ==========================================
# DYNAMODB TABLES (Auto-created by setup script)
# ==========================================

NEXT_PUBLIC_DYNAMODB_TEMPLATES_TABLE=PreWorkApp-Templates-dev
NEXT_PUBLIC_DYNAMODB_USERS_TABLE=PreWorkApp-Users-dev
NEXT_PUBLIC_DYNAMODB_INTEGRATIONS_TABLE=PreWorkApp-Integrations-dev
NEXT_PUBLIC_DYNAMODB_ANALYTICS_TABLE=PreWorkApp-Analytics-dev
NEXT_PUBLIC_DYNAMODB_WORKFLOWS_TABLE=PreWorkApp-Workflows-dev

# ==========================================
# S3 BUCKETS (Auto-created by setup script)
# ==========================================

NEXT_PUBLIC_S3_BUCKET=preworkapp-storage-dev
NEXT_PUBLIC_S3_TEMPLATES_BUCKET=preworkapp-templates-dev
NEXT_PUBLIC_S3_MEDIA_BUCKET=preworkapp-media-dev

# ==========================================
# FEATURE FLAGS
# ==========================================

NEXT_PUBLIC_ENABLE_REAL_TIME_SYNC=true
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_INTEGRATION_HUB=true

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
ENABLE_DEBUG_LOGGING=true

# ==========================================
# SETUP INSTRUCTIONS
# ==========================================

# STEP 1: Choose your setup option above
# STEP 2: If using AWS, add your credentials
# STEP 3: Run setup command:
#   For AWS: npm run aws:setup-dev
#   For Mock: Just run npm run dev
# STEP 4: Test connection: npm run aws:test-connection

