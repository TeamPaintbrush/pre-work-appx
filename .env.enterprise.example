# Enterprise Environment Variables
# Add these to your .env.local file

# Enterprise Feature Flags
NEXT_PUBLIC_ENTERPRISE_ENABLED=true
NEXT_PUBLIC_CUSTOM_FIELDS_ENABLED=true
NEXT_PUBLIC_WORKFLOWS_ENABLED=true
NEXT_PUBLIC_MULTI_VIEW_ENABLED=true
NEXT_PUBLIC_REAL_TIME_SYNC_ENABLED=true

# AWS DynamoDB Tables for Enterprise Features
WORKSPACES_TABLE=PreWorkApp-Workspaces-Dev
CUSTOM_FIELDS_TABLE=PreWorkApp-CustomFields-Dev
WORKFLOWS_TABLE=PreWorkApp-Workflows-Dev
BOARD_CONFIGS_TABLE=PreWorkApp-BoardConfigs-Dev
ENTERPRISE_PROJECTS_TABLE=PreWorkApp-EnterpriseProjects-Dev
ENTERPRISE_TASKS_TABLE=PreWorkApp-EnterpriseTasks-Dev
DASHBOARDS_TABLE=PreWorkApp-Dashboards-Dev
SYNC_OPERATIONS_TABLE=PreWorkApp-SyncOperations-Dev

# Production Tables (uncomment for production)
# WORKSPACES_TABLE=PreWorkApp-Workspaces-Prod
# CUSTOM_FIELDS_TABLE=PreWorkApp-CustomFields-Prod
# WORKFLOWS_TABLE=PreWorkApp-Workflows-Prod
# BOARD_CONFIGS_TABLE=PreWorkApp-BoardConfigs-Prod
# ENTERPRISE_PROJECTS_TABLE=PreWorkApp-EnterpriseProjects-Prod
# ENTERPRISE_TASKS_TABLE=PreWorkApp-EnterpriseTasks-Prod
# DASHBOARDS_TABLE=PreWorkApp-Dashboards-Prod
# SYNC_OPERATIONS_TABLE=PreWorkApp-SyncOperations-Prod

# Real-time Sync Configuration
SYNC_INTERVAL_SECONDS=30
OFFLINE_SYNC_ENABLED=true
CONFLICT_RESOLUTION_STRATEGY=last_write_wins

# Enterprise Security
ENTERPRISE_ENCRYPTION_KEY=your-enterprise-encryption-key-here
AUDIT_LOG_ENABLED=true
SESSION_TIMEOUT_MINUTES=480

# Integration Settings
CALENDAR_INTEGRATION_ENABLED=false
SLACK_INTEGRATION_ENABLED=false
EMAIL_NOTIFICATIONS_ENABLED=true
