# PRODUCTION ENVIRONMENT CONFIGURATION
# AWS Cognito Authentication & Production Deployment

NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://app.preworkchecklist.com
NEXT_PUBLIC_API_URL=https://api.preworkchecklist.com

# AWS Configuration
AWS_REGION=us-east-1
NEXT_PUBLIC_AWS_REGION=us-east-1
NEXT_PUBLIC_AWS_ACCOUNT_ID=YOUR_AWS_ACCOUNT_ID
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS Cognito Authentication
NEXT_PUBLIC_COGNITO_USER_POOL_ID=YOUR_COGNITO_USER_POOL_ID
NEXT_PUBLIC_COGNITO_CLIENT_ID=YOUR_COGNITO_CLIENT_ID
NEXT_PUBLIC_COGNITO_IDENTITY_POOL_ID=YOUR_COGNITO_IDENTITY_POOL_ID

# DynamoDB Tables
NEXT_PUBLIC_DYNAMODB_TEMPLATES_TABLE=pre-work-app-templates-prod
NEXT_PUBLIC_DYNAMODB_CHECKLISTS_TABLE=pre-work-app-checklists-prod
NEXT_PUBLIC_DYNAMODB_USERS_TABLE=pre-work-app-users-prod

# S3 Buckets
NEXT_PUBLIC_S3_ASSETS_BUCKET=pre-work-app-assets-prod
AWS_S3_BUCKET=pre-work-app-assets-prod
NEXT_PUBLIC_S3_BACKUPS_BUCKET=pre-work-app-backups-prod
NEXT_PUBLIC_S3_LOGS_BUCKET=pre-work-app-logs-prod

# Legacy Database (if still needed)
DATABASE_URL=your_production_database_url
REDIS_URL=your_redis_url
AWS_DYNAMODB_TABLE=pre-work-app-checklists-prod

# Authentication
NEXTAUTH_URL=https://app.preworkchecklist.com
NEXTAUTH_SECRET=your_nextauth_secret
JWT_SECRET=your_jwt_secret

# External Services
SENDGRID_API_KEY=your_sendgrid_api_key
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_google_analytics_id
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_google_analytics_id
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Feature Flags for Production
ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_SYNC=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ADVANCED_FEATURES=true
NEXT_PUBLIC_ENABLE_ENTERPRISE_FEATURES=true
NEXT_PUBLIC_ENABLE_AWS_INTEGRATION=true

# Security Configuration
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_ENABLE_HTTPS_ONLY=true
NEXT_PUBLIC_ENABLE_HSTS=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# Performance & Caching
NEXT_PUBLIC_ENABLE_SW=true
NEXT_PUBLIC_ENABLE_COMPRESSION=true
NEXT_PUBLIC_ENABLE_CACHING=true

# API Configuration
NEXT_PUBLIC_API_RATE_LIMIT_PER_HOUR=1000
NEXT_PUBLIC_API_BURST_LIMIT=50
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Real-time Features
NEXT_PUBLIC_WEBSOCKET_URL=wss://ws.preworkchecklist.com
NEXT_PUBLIC_ENABLE_LIVE_UPDATES=true
NEXT_PUBLIC_SYNC_INTERVAL=30000

# Collaboration Features
NEXT_PUBLIC_MAX_COLLABORATORS=50
NEXT_PUBLIC_ENABLE_TEAM_WORKSPACES=true
NEXT_PUBLIC_ENABLE_SHARING=true
ENABLE_MONITORING=true
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_TRACKING=true

# Performance
MAX_UPLOAD_SIZE=10485760
API_RATE_LIMIT=100
CACHE_TTL=3600

# Security
CORS_ORIGIN=https://prework-app.vercel.app
ALLOWED_ORIGINS=https://prework-app.vercel.app,https://admin.prework-app.com
CSP_REPORT_URI=https://monitoring.prework-app.com/csp-report

# Monitoring
MONITORING_WEBHOOK_URL=your_monitoring_webhook_url
HEALTH_CHECK_INTERVAL=30000
LOG_LEVEL=info
