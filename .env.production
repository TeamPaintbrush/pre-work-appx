# Production Environment Variables
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://prework-app.vercel.app
NEXT_PUBLIC_API_URL=https://api.prework-app.com

# Database Configuration
DATABASE_URL=your_production_database_url
REDIS_URL=your_redis_url

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=prework-app-assets-production
AWS_DYNAMODB_TABLE=prework-checklists-production

# Authentication
NEXTAUTH_URL=https://prework-app.vercel.app
NEXTAUTH_SECRET=your_nextauth_secret
JWT_SECRET=your_jwt_secret

# External Services
SENDGRID_API_KEY=your_sendgrid_api_key
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_TRACKING=true

# Performance
MAX_UPLOAD_SIZE=10485760
API_RATE_LIMIT=100
CACHE_TTL=3600

# Security
CORS_ORIGIN=https://prework-app.vercel.app
ALLOWED_ORIGINS=https://prework-app.vercel.app,https://admin.prework-app.com
CSP_REPORT_URI=https://monitoring.prework-app.com/csp-report

# Monitoring
MONITORING_WEBHOOK_URL=your_monitoring_webhook_url
HEALTH_CHECK_INTERVAL=30000
LOG_LEVEL=info
