{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:us-east-1:*:table/pre-work-users-prod",
        "arn:aws:dynamodb:us-east-1:*:table/pre-work-profiles-prod",
        "arn:aws:dynamodb:us-east-1:*:table/pre-work-submissions-prod",
        "arn:aws:dynamodb:us-east-1:*:table/pre-work-media-prod",
        "arn:aws:dynamodb:us-east-1:*:table/pre-work-audit-log-prod"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:GetObjectVersion"
      ],
      "Resource": [
        "arn:aws:s3:::preworkapp-media-uploads-prod/*",
        "arn:aws:s3:::preworkapp-thumbnails-prod/*",
        "arn:aws:s3:::preworkapp-documents-prod/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::preworkapp-media-uploads-prod",
        "arn:aws:s3:::preworkapp-thumbnails-prod",
        "arn:aws:s3:::preworkapp-documents-prod"
      ]
    }
  ]
}
